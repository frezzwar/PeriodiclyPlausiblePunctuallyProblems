package compiler.interpret;

import java.util.ArrayList;
import java.util.List;

import compiler.interpret.Type;


public class TypeExpression
{		
	private List<Type> inputList = new ArrayList<Type>();
	private List<Type> outputList = new ArrayList<Type>();
	public void Output(Type output) 
	{
		this.outputList.add(output);
	}	
	
	public void Input(Type input)
	{
		this.inputList.add(input);
	}
	
	public List<Type> getInput()
	{
		return inputList;
	}
	
	public List<Type> getOutput()
	{
		return outputList;
	}
	
	public void clear()
	{
		inputList = new ArrayList<Type>();
		outputList = new ArrayList<Type>();
	}
	
	@Override public String toString() 
	{
		String result = "";

		for(int i = 0; i < inputList.size(); i++)
		{
			result += inputList.get(i) + " ";
		}
	    result += " --> ";
	    
	    for(int i = 0; i < outputList.size(); i++)
	    {
	    	result += outputList.get(i) + " ";
	    }
		return result;
	}
}
	
	

