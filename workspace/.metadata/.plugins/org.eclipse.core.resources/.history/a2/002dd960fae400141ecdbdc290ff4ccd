package compiler.interpret;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.PrintWriter;


public class FileSetup {
	
	public static void Setup()
	{
		//delete the output file if it already exists
	    File fileTemp = new File("out.js");
	    if (fileTemp.exists()){
	       fileTemp.delete();
	    }
	    
	    
	    String setup = "<!DOCTYPE html>"+ "<html>" + "<body>\n" + "<p id=\"demo\"></p>\n" + "<script>";	
	    try{
			PrintWriter out
			   = new PrintWriter(new BufferedWriter(new FileWriter("out.js", true)));
			out.println(setup);
			out.close();
		}catch(Exception e)
		{
			
		}
	}
	
	public static void Finish()
	{
		String finish = "</script>"+ "</body>" + "</html>";	
	    try{
			PrintWriter out
			   = new PrintWriter(new BufferedWriter(new FileWriter("out.js", true)));
			out.println(finish);
			out.close();
		}catch(Exception e)
		{
			
		}
	}
}
